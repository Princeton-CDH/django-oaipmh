{% extends "django_oaipmh/base.xml" %}

{% block content %}
<request verb="{{ verb }}" 
         identifier="{{ identifier }}"
         metadataPrefix="{{ metadataPrefix }}">{{ url }}</request>
{% if error %}
<error code="{{ error.code }}">{{ error.message }}</error>
{% else %}
<GetRecord>
    <record>
        <header>
            <identifier>{{ item.oai_identifier }}</identifier>
            <datestamp>{{ item.oai_datestamp }}</datestamp>
            {% for set in item.oai_sets %}
            <setSpec>{{ set }}</setSpec>
            {% endfor %}
        </header>
        <metadata>
        {{ metadata|safe }}
        </metadata>
    </record>
</GetRecord>
{% endif %}
{% endblock %}