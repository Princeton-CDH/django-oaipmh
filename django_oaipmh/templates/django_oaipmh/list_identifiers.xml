{% extends "django_oaipmh/base.xml" %}

{% block content %}
<request verb="{{ verb }}" 
        {% if from %}from="{{ from }}" {% endif %}
        {% if until %}until="{{ until }}" {% endif %}
        {% if set %}set="{{ set }}" {% endif %}
        {% if metadataPrefix %}metadataPrefix="{{ metadataPrefix }}" {% endif %}>
        {{ url }}</request>
{% if error %}
<error code="{{ error.code }}">{{ error.message }}</error>
{% else %}
<ListIdentifiers>
    {% for item in items %}
    <header>
        <identifier>{{ item.oai_identifier }}</identifier>
        <datestamp>{{ item.oai_datestamp|date:'c' }}</datestamp>
        {% for set in item.oai_sets %}
        <setSpec>{{ set }}</setSpec>
        {% endfor %}
    </header>
    {% endfor %}
</ListIdentifiers>
{% endif %}
{% endblock %}
